.goodsClass {
  padding-top: 8px;
}

.goodsClass::after {
  content: '';
  display: block;
  visibility: hidden;
  height: 0;
  font-size: 0;
  clear: both;
}

.title {
  margin: 0 0 36px 16px;
  font-weight: 600;
  color: rgba(51, 51, 51, 1);
}

.leftBox {
  width: 26.67%;
  float: left;
}

.rightBox {
  width: 73.33%;
  float: left;
}

.typeList {
  display: block;
  height: 100%;
  width: 100%;
}

.li {
  display: block;
  height: 50px;
  width: 100%;
  text-align: center;
  line-height: 50px;
  position: relative;
  background: rgba(255, 255, 255, 1);
}

.i {
  position: absolute;
  width: 4px;
  height: 15px;
  background: rgba(54, 90, 247, 1);
  left: 0;
  top: 17px;
  display: none;
}

.span {
  color: #666;
  font-weight: 300;
  font-size: 13px;
}

.display {
  display: block;
}

.check {
  color: #333;
  font-size: 14px;
  font-weight: 600;
}

.subTypeList {
  background: rgba(255, 255, 255, 1);
  box-shadow: 0px 1px 10px 0px rgba(0, 0, 0, 0.05);
  padding: 10px 8px 0;
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
}

.subTypeItem {
  width: 71px;
  text-align: center;
  margin-bottom: 25px;
}

.subTypeItem  .div {
  height: 71px;
  width: 71px;
  margin-bottom: 3px;
}

.subTypeItem  image {
  width: 100%;
  height: 71px;
}

.subTypeItem .span {
  color: #333;
  font-size: 11px;
}
