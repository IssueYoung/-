.home {
  width: auto;
  height: 100%;
  padding: 0 14px 0;
  background: #fff;
}

.indexTitle {
  height: 38px;
  font-weight: 600;
  color: #333;
  line-height: 38px;
  margin-bottom: 22px;
  margin-left: 2px;
  font-size: 27px;
}

.banner {
  margin-bottom: 21px;
  height: 135px;
  background: #fafafa;
  border-radius: 4px;
}

.banner .slide-image {
  width: 100%;
  height: 135px;
}

.category {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-justify-content: space-around;
  justify-content: space-around;
  text-align: center;
  margin-bottom: 23px;
  font-size: 12px;
}

.category image {
  width: 46px;
  height: 46px;
  margin-bottom: 9px;
}

.sellingItem {
  margin-bottom: 33px;
}

.title {
  font-size: 19px;
  height: 26px;
  font-weight: 600;
  color: #333;
  line-height: 26px;
  margin-top: 0;
  margin-bottom: 15px;
}

.hotBanner {
  margin: 0 auto;
  position: relative;
  overflow: hidden;
  list-style: none;
  padding: 0;
  z-index: 1;
}

.hotBanner .slide-image {
  width: 130px;
  height: 100%;
}

.titleTop{
      height: 26px;
    margin-bottom: 13px;
}
.titleTop::after,.perList::after{
  content:'';
    display: block;
    visibility: hidden;
    height: 0;
    font-size: 0;
    clear:both;
}
.titleTop .title{
  float: left;
  margin-bottom: 0;
  margin-top: 0;
}
.seeMore {
  float: right;
  margin-top: 4px;
  font-weight: 400;
  font-size: 13px;
}
.regionLongImg {
    height: 112px;
    width: 100%;
    margin-bottom: 12px;
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    background-color: #fafafa;
    border-radius: 3px;
}
.regionLongImg image{
  width: 100%;
  height: 100%;
}
.activityBox image{
  width: 50%;
  height: 94px;
  float: left;
}